    <style name="Theme.Vault.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Vault.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->
</resources>